
    <div class="carousel-hero">
      <div class="main-carousel">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
              <div>
                <div class="carousel-item drk active">
                  <img class="d-block w-100" src="<%= image_url('background-1v.jpg') %>" alt="First slide">
                </div>
                <div class="carousel-item drk">
                  <img class="d-block w-100" src="<%= image_url('background-2v.jpg') %>" alt="Second slide">
                </div>
                <div class="carousel-item drk">
                  <img class="d-block w-100" src="<%= image_url('background-3v.jpg') %>" alt="Third slide">
                </div>
              </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="title">
        <div>
          <h1 class="hero-title"><span class="title-first">Arraial</span><span class="title-second"> é </span> <span class="title-third" id="change"> PRAIA</span></h1>
        </div>
        <div>
          <h4 class="hero-title-h4" >Explore esse paraíso!</h4>
        </div>
      </div>

      <script>
        var text = ["PRAIA", "MAR", "SOL", "LINDO", "TUDO"];
        var counter = 0;
        var elem = document.getElementById("change");
        if (!inst) {
          var inst = setInterval(change, 2500);
        }
        function change() {
          elem.innerHTML = text[counter];
          counter++;
          if (counter >= text.length) {
          counter = 0;
          }
        }
      </script>
    </div>

    <div class="container">


      <div class="top-products">
